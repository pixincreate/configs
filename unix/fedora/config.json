{
  "system": {
    "hostname": "pixw"
  },
  "dnf": {
    "max_parallel_downloads": 10,
    "install_weak_deps": false,
    "fastestmirror": true
  },
  "repositories": {
    "rpmfusion": {
      "enabled": true
    },
    "terra": {
      "enabled": true
    },
    "copr": {
      "repos": [
        "atim/starship",
        "lilay/topgrade",
        "lukenukem/asus-linux",
        "wezfurlong/wezterm-nightly"
      ]
    },
    "external": [
      {
        "name": "vscode",
        "type": "repo_file",
        "content": "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\nautorefresh=1\ntype=rpm-md\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc",
        "gpgkey": "https://packages.microsoft.com/keys/microsoft.asc"
      },
      {
        "name": "tailscale",
        "type": "url",
        "repo_url": "https://pkgs.tailscale.com/stable/fedora/tailscale.repo"
      },
      {
        "name": "nextdns",
        "type": "url",
        "repo_url": "https://repo.nextdns.io/nextdns.repo"
      }
    ]
  },
  "packages": {
    "rust": {
      "tools": [
        "cargo-audit",
        "cargo-deny",
        "cargo-fuzz",
        "cargo-wipe",
        "cargo-update",
        "cargo-cache",
        "just",
        "rustlings",
        "wasm-pack"
      ]
    }
  },
  "services": {
    "enable": ["docker", "postgresql", "redis", "tailscaled"],
    "disable": ["NetworkManager-wait-online"]
  },
  "hardware": {
    "asus": {
      "auto_detect": true,
      "packages": ["asusctl", "supergfxctl"]
    },
    "nvidia": {
      "auto_detect": true
    }
  },
  "multimedia": {
    "install_codecs": true,
    "enable_hardware_accel": true,
    "swap_to_full_ffmpeg": true
  },
  "performance": {
    "enable_zram": true,
    "zram_size_mb": 24576,
    "disable_cpu_mitigations": false,
    "enable_fstrim": true,
    "enable_oomd": true
  },
  "git": {
    "user_name": "PiX",
    "user_email": "69745008+pixincreate@users.noreply.github.com"
  },
  "directories": {
    "config": "~/.config",
    "local_bin": "~/.local/bin",
    "ssh": "~/.ssh",
    "fonts": "~/.local/share/fonts",
    "wallpapers": "~/Pictures/Wallpapers",
    "screenshots": "~/Pictures/Screenshots",
    "zsh": "~/.zsh"
  },
  "dotfiles": {
    "stow_packages": [
      "cargo",
      "config",
      "git",
      "ssh",
      "zsh",
      "Pictures",
      "local"
    ],
    "fonts_source": "~/Dev/.configs/fonts",
    "config_root": "~/Dev/.configs"
  }
}
