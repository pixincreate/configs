#!/bin/bash

browser=$(xdg-settings get default-web-browser 2>/dev/null || echo "zen-browser.desktop")

case $browser in
google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi* | helium*) ;;
*) browser="zen-browser.desktop" ;;
esac

browser_exec=$(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,/usr}/share/applications/$browser 2>/dev/null | head -1)

exec "$browser_exec" --app="$1" "${@:2}"
